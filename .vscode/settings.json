{
    // ** VSCode Configuration **
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.h.in": "c"
    },

    // * Formatting
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // * jkiviluoto.tws
    "tws.highlightTrailingWhiteSpace": true,
    "tws.trimOnSave": false,

    "[python]": {
        "editor.defaultFormatter": "ms-python.flake8",
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },

    // * Microsoft's C++
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.runAutomatically": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "C:/Program Files/LLVM/bin/clang-tidy",
    "C_Cpp.codeAnalysis.clangTidy.args": [
        "-extra-arg=-I${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/include"
    ],

    // * Microsoft's CMake
    "cmake.configureOnOpen": true,
    "cmake.ignoreCMakeListsMissing": false,
    "cmake.useCMakePresets": "always",

    // * Red hat
    "redhat.telemetry.enabled": false,

}